@model List<User>
@{
}
<h2 class="text-center mb-5">Users</h2>

<div class="text-center">
    <div class="col">
        <a class="btn btn-outline-primary" asp-controller="Users" asp-action="Create">New User</a>
    </div>
    <div class="col">
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Full Name</th>
            <th>Role</th>
            <th>User Created Date</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.FullName</td>
                <td>@user.Role</td>
                <td>@user.UserCreatedDate.ToString("dd/MM/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Users" asp-action="Edit"
                       asp-route-id="@user.UserId">Edit</a>
                    <a class="btn btn-outline-danger btn-sm" asp-controller="Users" asp-action="Delete"
                       asp-route-id="@user.UserId" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>